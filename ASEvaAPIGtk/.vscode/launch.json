{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
        {
            "id": "gdk_backend",
            "type": "pickString",
            "description": "请选择显示服务器",
            "default": "",
            "options": [
                "",
                "x11",
                "wayland"
            ]
        },
        {
            "id": "gdk_gl",
            "type": "pickString",
            "description": "请选择OpenGL配置",
            "default": "",
            "options": [
                "",
                "LEGACY",
            ]
        }
    ],
    "configurations": [
        {
            "name": "调试运行",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "调试构建",
            "program": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest",
            "args": [],
            "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "GDK_BACKEND": "${input:gdk_backend}",
                "GDK_GL": "${input:gdk_gl}",
            },
            // "type": "f5anything",
            // "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest",
        },
    ]
}