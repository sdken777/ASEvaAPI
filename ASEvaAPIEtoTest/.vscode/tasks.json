{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
        {
            "id": "helper_platform_exe_text_resource_editor",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_exe",
                    "TextResourceEditor",
                ]
            }
        },
        {
            "id": "helper_osx_version",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "osx_version"
                ]
            }
        },
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "调试构建",
            "group": "build",
            "command": "echo",
            "args": [
                "Done.",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "清理",
                "(子任务)调试构建",
                "(子任务)移除调试构建冗余文件",
            ],
            "problemMatcher": [],
            "osx": {
                "command": "dotnet",
                "args": [
                    "../bin/AppMaker.dll",
                    "${workspaceFolder}/../macapp-local-ASEvaAPIEtoTest.xml",
                    "debug",
                ],
            }
        },
        {
            "type": "process",
            "label": "发布构建",
            "group": "build",
            "command": "echo",
            "args": [
                "Done.",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "清理",
                "(子任务)发布构建",
                "(子任务)移除发布构建冗余文件",
                "(子任务)拷贝至其他目录",
            ],
            "problemMatcher": [],
            "osx": {
                "command": "dotnet",
                "args": [
                    "../bin/AppMaker.dll",
                    "${workspaceFolder}/../macapp-local-ASEvaAPIEtoTest.xml",
                    "release",
                ],
            }
        },
        {
            "type": "process",
            "label": "清理",
            "group": "build",
            "command": "rm",
            "args": [
                "-rf",
                "./obj",
                "./bin"
            ],
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "运行文本资源编辑器",
            "group": "build",
            "command": "../${input:helper_platform_bin_name}/${input:helper_platform_exe_text_resource_editor}",
            "args": [],
            "problemMatcher": [],
        },

        // 以下为子任务

        {
            "type": "process",
            "label": "(子任务)调试构建",
            "command": "dotnet",
            "problemMatcher": "$msCompile",
            "windows": {
                "args": [
                    "build",
                    "./ASEvaAPIEtoTest.csproj",
                    "-o",
                    "../${input:helper_platform_bin_name}/debug",
                    "/property:OutputType=WinExe",
                    "/property:UseWindowsForms=true",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            },
            "linux": {
                "args": [
                    "build",
                    "./ASEvaAPIEtoTest.csproj",
                    "-o",
                    "../${input:helper_platform_bin_name}/debug",
                    "/property:OutputType=Exe",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            },
            "osx": {
                "args": [
                    "publish",
                    "./ASEvaAPIEtoTest.csproj",
                    "-r",
                    "${input:helper_osx_version}",
                    "--no-self-contained",
                    "-o",
                    "../${input:helper_platform_bin_name}/debug",
                    "/property:OutputType=Exe",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            }
        },
        {
            "type": "process",
            "label": "(子任务)发布构建",
            "command": "dotnet",
            "problemMatcher": "$msCompile",
            "windows": {
                "args": [
                    "build",
                    "./ASEvaAPIEtoTest.csproj",
                    "-c",
                    "Release",
                    "-o",
                    "../${input:helper_platform_bin_name}",
                    "/property:OutputType=WinExe",
                    "/property:ApplicationIcon=Resources/icon.ico",
                    "/property:UseWindowsForms=true",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            },
            "linux": {
                "args": [
                    "build",
                    "./ASEvaAPIEtoTest.csproj",
                    "-c",
                    "Release",
                    "-o",
                    "../${input:helper_platform_bin_name}",
                    "/property:OutputType=Exe",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            },
            "osx": {
                "args": [
                    "publish",
                    "./ASEvaAPIEtoTest.csproj",
                    "-c",
                    "Release",
                    "-r",
                    "${input:helper_osx_version}",
                    "--no-self-contained",
                    "-o",
                    "../${input:helper_platform_bin_name}",
                    "/property:OutputType=Exe",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            }
        },
        {
            "type": "process",
            "label": "(子任务)移除调试构建冗余文件",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest.pdb",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest.deps.json",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest.runtimeconfig.dev.json",
            ],
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "(子任务)移除发布构建冗余文件",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/ASEvaAPIEtoTest.pdb",
                "../${input:helper_platform_bin_name}/ASEvaAPIEtoTest.deps.json",
                "../${input:helper_platform_bin_name}/ASEvaAPIEtoTest.runtimeconfig.dev.json",
            ],
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "(子任务)拷贝至其他目录",
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "copy_outputs",
                "ASEvaAPIEtoTest",
                "bin64",
                "binx",
                "binxa",
                "binm",
            ],
            "problemMatcher": []
        },
    ]
}