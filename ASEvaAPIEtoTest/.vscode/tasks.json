{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
        {
            "id": "helper_platform_exe_text_resource_editor",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_console_exe",
                    "TextResourceEditor",
                ]
            }
        },
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest.pdb",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest.deps.json",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEtoTest.runtimeconfig.dev.json",
                "ASEvaAPIEtoTest.WindowsDesktop.csproj",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Generate Windows project file",
                "Subtask: Build for host (Debug)",
            ],
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/ASEvaAPIEtoTest.pdb",
                "../${input:helper_platform_bin_name}/ASEvaAPIEtoTest.deps.json",
                "../${input:helper_platform_bin_name}/ASEvaAPIEtoTest.runtimeconfig.dev.json",
                "ASEvaAPIEtoTest.WindowsDesktop.csproj",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Generate Windows project file",
                "Subtask: Build for host (Release)",
                "Subtask: Copy to other folders",
            ],
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "rm",
            "args": [
                "-rf",
                "./obj",
                "./bin"
            ],
            "problemMatcher": [],
        },
        {
            "type": "process",
            "label": "Run Text Resource Editor",
            "command": "../${input:helper_platform_bin_name}/${input:helper_platform_exe_text_resource_editor}",
            "problemMatcher": [],
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Generate Windows project file",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "gen_windows_csproj",
                "ASEvaAPIEtoTest.csproj",
            ],
        },
        {
            "type": "process",
            "label": "Subtask: Build for host (Debug)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIEtoTest.csproj",
                "-o",
                "../${input:helper_platform_bin_name}/debug",
                "/property:OutputType=Exe",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "windows": {
                "args": [
                    "build",
                    "./ASEvaAPIEtoTest.WindowsDesktop.csproj",
                    "-o",
                    "../${input:helper_platform_bin_name}/debug",
                    "/property:OutputType=WinExe",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            },
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Build for host (Release)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIEtoTest.csproj",
                "-c",
                "Release",
                "-o",
                "../${input:helper_platform_bin_name}",
                "/property:OutputType=Exe",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "windows": {
                "args": [
                    "build",
                    "./ASEvaAPIEtoTest.WindowsDesktop.csproj",
                    "-c",
                    "Release",
                    "-o",
                    "../${input:helper_platform_bin_name}",
                    "/property:OutputType=WinExe",
                    "/property:ApplicationIcon=Resources/icon.ico",
                    "/property:GenerateFullPaths=true",
                    "/consoleloggerparameters:NoSummary"
                ],
            },
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Copy to other folders",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "copy_outputs",
                "ASEvaAPIEtoTest",
                "bin64",
                "binx",
                "binxa",
                "binm",
                "binma",
            ],
        },
    ]
}