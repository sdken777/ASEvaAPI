{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/debug/PortableSharpGL.pdb",
                "../${input:helper_platform_bin_name}/debug/PortableSharpGL.deps.json",
            ],
            "dependsOn": [
                "Subtask: Build for host (Debug)",
            ],
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/PortableSharpGL.pdb",
                "../${input:helper_platform_bin_name}/PortableSharpGL.deps.json",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Build for host (Release)",
                "Subtask: Copy to other folders",
            ],
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "rm",
            "args": [
                "-rf",
                "./obj",
                "./bin"
            ],
            "problemMatcher": []
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Build for host (Debug)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./SharpGL.csproj",
                "-o",
                "../${input:helper_platform_bin_name}/debug",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Build for host (Release)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./SharpGL.csproj",
                "-c",
                "Release",
                "-o",
                "../${input:helper_platform_bin_name}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Copy to other folders",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "copy_outputs",
                "PortableSharpGL",
                "bin64",
                "binx",
                "binxa",
                "binma",
            ],
        },
    ]
}
