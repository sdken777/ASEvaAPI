<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASEva.UIAvalonia"
        x:Class="ASEva.UIAvalonia.ColorPickerDialog"
        Title="" WindowStartupLocation="CenterScreen" 
        Width="350" Height="450" MinWidth="350" MinHeight="450" CanResize="False">
    <Grid RowDefinitions="400,50">
        <ColorView Grid.Row="0" x:Name="view">
        </ColorView>
        <Button Grid.Row="1" x:Name="buttonOK" Margin="8" Content="OK" Width="100" HorizontalAlignment="Center" HorizontalContentAlignment="Center" />
    </Grid>
</Window>
