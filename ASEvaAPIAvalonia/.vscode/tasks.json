{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
        {
            "id": "helper_platform_exe",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_console_exe",
                    "ASEvaAPIAvaloniaTest"
                ]
            }
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "rm",
            "args": [
                "-rf",
                "../${input:helper_platform_bin_name}/debug/bin"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Build for host (Debug)",
                "Subtask: Copy built files (Debug)"
            ]
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "rm",
            "args": [
                "-rf",
                "../${input:helper_platform_bin_name}/bin",
                "../binb/bin"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Build for host (Release)",
                "Subtask: Build for bundle (Release)",
                "Subtask: Copy built files (Release)",
                "Subtask: Copy to other folders",
                "Subtask: Copy built files for bundle (Release)"
            ]
        },
        {
            "type": "process",
            "label": "Run (Debug)",
            "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/${input:helper_platform_exe}",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build (Debug)"
            ],
            "linux": {
                "env": {
                    "COMPlus_EnableAlternateStackCheck": "1"
                }
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Run (Release)",
            "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/${input:helper_platform_exe}",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build (Release)"
            ],
            "linux": {
                "env": {
                    "COMPlus_EnableAlternateStackCheck": "1"
                }
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "rm",
            "args": [
                "-rf",
                "./obj",
                "./bin"
            ],
            "problemMatcher": []
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Build for host (Debug)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIAvalonia.csproj",
                "-o",
                "../${input:helper_platform_bin_name}/debug/bin",
                "/property:OutputType=Library",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "process",
            "label": "Subtask: Build for host (Release)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIAvalonia.csproj",
                "-c",
                "Release",
                "-o",
                "../${input:helper_platform_bin_name}/bin",
                "/property:DocumentationFile=../${input:helper_platform_bin_name}/ASEvaAPIAvalonia.xml",
                "/property:OutputType=Library",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "process",
            "label": "Subtask: Build for bundle (Release)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIAvalonia.csproj",
                "-c",
                "Release",
                "-o",
                "../binb/bin",
                "/property:DocumentationFile=../binb/ASEvaAPIAvalonia.xml",
                "/property:OutputType=Library",
                "/property:GenerateFullPaths=true",
                "/property:ASEvaAPIBundleMode=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "process",
            "label": "Subtask: Copy built files (Debug)",
            "hide": true,
            "command": "cp",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/debug/bin/ASEvaAPIAvalonia.dll",
                "../${input:helper_platform_bin_name}/debug/"
            ]
        },
        {
            "type": "process",
            "label": "Subtask: Copy built files (Release)",
            "hide": true,
            "command": "cp",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/bin/ASEvaAPIAvalonia.dll",
                "../${input:helper_platform_bin_name}/"
            ]
        },
        {
            "type": "process",
            "label": "Subtask: Copy built files for bundle (Release)",
            "hide": true,
            "command": "cp",
            "args": [
                "-vf",
                "../binb/bin/ASEvaAPIAvalonia.dll",
                "../binb/"
            ]
        },
        {
            "type": "process",
            "label": "Subtask: Copy to other folders",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "copy_outputs",
                "ASEvaAPIAvalonia",
                "bin64",
                "binx",
                "binxa",
                "binm",
                "binma"
            ]
        }
    ]
}