<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eto.WinUI.CustomControls">

	<Style TargetType="local:SpinButton">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:SpinButton">
					<StackPanel>
						<Button x:Name="UpButton"
								IsEnabled="{TemplateBinding UpEnabled}"
                                Padding="0"
                                Height="20"
                                Width="20"
                                HorizontalAlignment="Center">
							<FontIcon Glyph="&#x2303;" FontFamily="Arial" />
							<!-- Chevron Up -->
						</Button>
						<Button x:Name="DownButton"
								IsEnabled="{TemplateBinding DownEnabled}"
                                Padding="0"
                                Height="20"
                                Width="20"
                                HorizontalAlignment="Center">
							<FontIcon Glyph="&#x2304;" FontFamily="Arial" />
							<!-- Chevron Down -->
						</Button>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
