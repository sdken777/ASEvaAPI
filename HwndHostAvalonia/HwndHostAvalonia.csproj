<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Configurations>Release;Debug</Configurations>
    <UseWindowsForms>True</UseWindowsForms>
    <UseWpf>True</UseWpf>
    <RootNamespace>HwndHostAvalonia</RootNamespace>
    <AssemblyName>HwndHostAvalonia</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\bin64</OutputPath>
    <Optimize>true</Optimize>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\bin64\debug</OutputPath>
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="ASEvaAPI">
      <HintPath>..\bin64\ASEvaAPI.dll</HintPath>
    </Reference>
    <Reference Include="ASEvaAPICoreWF">
      <HintPath>..\bin64\ASEvaAPICoreWF.dll</HintPath>
    </Reference>
    <Reference Include="ASEvaAPIWpf">
      <HintPath>..\bin64\ASEvaAPIWpf.dll</HintPath>
    </Reference>
    <Reference Include="ASEvaAPIAvalonia">
      <HintPath>..\bin64\ASEvaAPIAvalonia.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.0.10" />
    <PackageReference Include="Avalonia.Desktop" Version="11.0.10" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.0.10" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y $(TargetPath) $(TargetDir)..\" />
  </Target>

</Project>
