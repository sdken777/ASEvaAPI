{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
        {
            "id": "helper_platform_exe",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_console_exe",
                    "ASEvaAPIEtoTest"
                ]
            }
        },
        {
            "id": "windows_ui",
            "type": "pickString",
            "description": "Choose UI Framework",
            "default": "",
            "options": [
                "",
                "corewf",
                "wpf"
            ]
        },
        {
            "id": "gdk_backend",
            "type": "pickString",
            "description": "Choose Display Server",
            "default": "",
            "options": [
                "",
                "x11",
                "wayland"
            ]
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIEto.deps.json",
            ],
            "dependsOn": [
                "Subtask: Build for host (Debug)",
            ],
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/ASEvaAPIEto.pdb",
                "../${input:helper_platform_bin_name}/ASEvaAPIEto.deps.json",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Build for host (Release)",
                "Subtask: Copy to other folders",
            ],
        },
        {
            "type": "process",
            "label": "Run (Debug)",
            "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/${input:helper_platform_exe}",
            "options": {
                "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build (Debug)"
            ],
            "windows": {
                "args": [ "${input:windows_ui}" ]
            },
            "linux": {
                "options": {
                    "env": {
                        "GDK_BACKEND": "${input:gdk_backend}",
                        "COMPlus_EnableAlternateStackCheck": "1"
                    }
                }
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Run (Release)",
            "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/${input:helper_platform_exe}",
            "options": {
                "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build (Release)"
            ],
            "windows": {
                "args": [ "${input:windows_ui}" ]
            },
            "linux": {
                "options": {
                    "env": {
                        "GDK_BACKEND": "${input:gdk_backend}",
                        "COMPlus_EnableAlternateStackCheck": "1"
                    }
                }
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "rm",
            "args": [
                "-rf",
                "./obj",
                "./bin"
            ],
            "problemMatcher": []
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Build for host (Debug)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIEto.csproj",
                "-o",
                "../${input:helper_platform_bin_name}/debug",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Build for host (Release)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIEto.csproj",
                "-c",
                "Release",
                "-o",
                "../${input:helper_platform_bin_name}",
                "/property:DocumentationFile=../${input:helper_platform_bin_name}/ASEvaAPIEto.xml",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Copy to other folders",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "copy_outputs",
                "ASEvaAPIEto",
                "bin64",
                "binx",
                "binxa",
                "binm",
                "binma",
            ],
        },
    ]
}
