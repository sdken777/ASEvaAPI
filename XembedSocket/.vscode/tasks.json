{
    "options": {
        "env": {
            "TYPE": "lib",
            "COMPILE": "cross",
            "TARGET": "XembedSocket",
            "DEPENDS_X86_LINUX": "X11",
            "DEPENDS_ARM_LINUX": "X11",
        }
    },
    "inputs": [
        {
            "id": "helper_platform_code",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_code"
                ]
            }
        },
        {
            "id": "helper_platform_env_var_depends",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_env_var",
                    "DEPENDS",
                ]
            }
        },
        {
            "id": "helper_thread_count",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "thread_count",
                    "0.8",
                ]
            }
        },
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=debug",
                "PLATFORM=${input:helper_platform_code}",
                "DEPENDS=${input:helper_platform_env_var_depends}",
            ],
            // "dependsOn": [
            //     "Subtask: Generate resource code",
            // ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "echo",
            "args": [ "Done." ],
            "dependsOrder": "sequence",
            "dependsOn": [
                // "Subtask: Generate resource code",
                "Subtask: Build for X86-Ubuntu1804 target (Release)",
                "Subtask: Build for Arm-Ubuntu1604 target (Release)",
            ],
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "make",
            "args": [
                "clean",
            ],
            "problemMatcher": []
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Generate resource code",
            "hide": true,
            "command": "dotnet",
            "args": [
                "../bin/VSCodeHelper.dll",
                "gen_resource_code",
            ],
        },
        {
            "type": "process",
            "label": "Subtask: Build for X86-Ubuntu1804 target (Release)",
            "hide": true,
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=linux",
                "DEPENDS=$(DEPENDS_X86_LINUX)",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Subtask: Build for Arm-Ubuntu1604 target (Release)",
            "hide": true,
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=linuxarm",
                "DEPENDS=$(DEPENDS_ARM_LINUX)",
            ],
            "problemMatcher":"$gcc",
        },
    ],
    "version": "2.0.0"
}