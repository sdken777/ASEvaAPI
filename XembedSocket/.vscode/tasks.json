{
    "options": {
        "env": {
            "TYPE": "lib",
            "COMPILE": "local",
            "TARGET": "XembedSocket",
            "DEPENDS_X86_LINUX": "X11",
            "DEPENDS_ARM_LINUX": "X11",
        }
    },
    "inputs": [
        {
            "id": "helper_platform_code",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_code"
                ]
            }
        },
        {
            "id": "helper_platform_env_var_depends",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_env_var",
                    "DEPENDS",
                ]
            }
        },
        {
            "id": "helper_thread_count",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "thread_count",
                    "0.8",
                ]
            }
        },
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=debug",
                "PLATFORM=${input:helper_platform_code}",
                "DEPENDS=${input:helper_platform_env_var_depends}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "make",
            "args": [
                "-j${input:helper_thread_count}",
                "MODE=release",
                "PLATFORM=${input:helper_platform_code}",
                "DEPENDS=${input:helper_platform_env_var_depends}",
            ],
            "problemMatcher":"$gcc",
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "make",
            "args": [
                "clean",
            ],
            "problemMatcher": []
        },
    ],
    "version": "2.0.0"
}