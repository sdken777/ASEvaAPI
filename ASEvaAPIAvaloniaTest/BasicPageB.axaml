<Panel xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASEvaAPIAvaloniaTest"
        x:Class="ASEvaAPIAvaloniaTest.BasicPageB"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" MinWidth="300" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" CornerRadius="3" Background="PaleGreen">
            <Grid Margin="8" ColumnDefinitions="Auto,8,*">
                <Grid Grid.Column="0" Width="130" RowDefinitions="*,8,*">
                    <ListBox Grid.Row="0" x:Name="listBox" Background="WhiteSmoke" BorderThickness="1" BorderBrush="Gray" CornerRadius="3">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="8,4,8,4" />
                            </Style>
                        </ListBox.Styles>
                    </ListBox>
                    <ListBox Grid.Row="2" x:Name="checkListBox" Background="WhiteSmoke" BorderThickness="1" BorderBrush="Gray" CornerRadius="3">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="8,0,8,0" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Grid Grid.Column="2" RowDefinitions="*,2,Auto">
                    <Border Grid.Row="0" Background="WhiteSmoke" BorderThickness="1" BorderBrush="Gray" CornerRadius="3">
                        <TreeView x:Name="treeView" ItemsSource="{Binding TreeNodes}" PointerReleased="treeView_PointerReleased">
                            <TreeView.ItemTemplate>
                                <TreeDataTemplate ItemsSource="{Binding SubNodes}">
                                    <Border HorizontalAlignment="Left" CornerRadius="3" Padding="3" Background="{Binding Background}">
                                        <TextBlock Text="{Binding Title}" Foreground="{Binding Foreground}" />
                                    </Border>
                                </TreeDataTemplate>
                            </TreeView.ItemTemplate>
                            <TreeView.Styles>
                                <Style Selector="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                                </Style>
                            </TreeView.Styles>
                        </TreeView>
                    </Border>
                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
                        <Button Classes="hyperlink" Grid.Column="0" Content="{DynamicResource basic-tree-select-first}" Click="linkSelectFirst_Click" />
                        <Button Classes="hyperlink" Grid.Column="2" Content="{DynamicResource basic-tree-change-color}" Click="linkChangeColor_Click" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <GridSplitter Grid.Column="1" ResizeDirection="Columns" />
        <Border Grid.Column="2" CornerRadius="3" Background="Pink">
            <Grid Margin="8" RowDefinitions="Auto,2,*,2,Auto">
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,*,Auto">
                    <Button Classes="hyperlink" Grid.Column="0" Content="{DynamicResource basic-flow-add}" Click="linkAddControl_Click" />
                    <Button Classes="hyperlink" Grid.Column="2" Content="{DynamicResource basic-flow-insert}" Click="linkInsertControl_Click" />
                    <Button Classes="hyperlink" Grid.Column="4" Content="{DynamicResource basic-flow-remove}" Click="linkRemoveControl_Click" />
                </Grid>
                <Border Grid.Row="2" Background="WhiteSmoke" BorderThickness="1" BorderBrush="Gray" CornerRadius="3">
                    <ScrollViewer>
                        <ItemsControl x:Name="flowLayout" ItemsSource="{Binding ControlItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4" CornerRadius="3" Background="LightYellow" BorderThickness="2" BorderBrush="{Binding BorderBrush}" IsVisible="{Binding IsVisible}">
                                        <local:TestControl Height="80" PointerReleased="testControl_PointerReleased" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <Grid Grid.Row="4" ColumnDefinitions="Auto,*,Auto,*,Auto">
                    <Button Classes="hyperlink" Grid.Column="0" Content="{DynamicResource basic-flow-show}" Click="linkShowControl_Click" />
                    <Button Classes="hyperlink" Grid.Column="2" Content="{DynamicResource basic-flow-hide}" Click="linkHideControl_Click" />
                    <Button Classes="hyperlink" Grid.Column="4" Content="{DynamicResource basic-flow-select}" Click="linkSelectControl_Click" />
                </Grid>
            </Grid>
        </Border>
    </Grid>

    <Panel.Resources>
        <ResourceDictionary>
            <ResourceDictionary x:Key="en">
                <x:String x:Key="basic-tree-select-first">Select</x:String>
                <x:String x:Key="basic-tree-change-color">Change color</x:String>
                <x:String x:Key="basic-flow-add">Add</x:String>
                <x:String x:Key="basic-flow-insert">Insert</x:String>
                <x:String x:Key="basic-flow-remove">Remove</x:String>
                <x:String x:Key="basic-flow-show">Show</x:String>
                <x:String x:Key="basic-flow-hide">Hide</x:String>
                <x:String x:Key="basic-flow-select">Select</x:String>
            </ResourceDictionary>
            <ResourceDictionary x:Key="zh">
                <x:String x:Key="basic-tree-select-first">选首项</x:String>
                <x:String x:Key="basic-tree-change-color">改变颜色</x:String>
                <x:String x:Key="basic-flow-add">添加项</x:String>
                <x:String x:Key="basic-flow-insert">插入项</x:String>
                <x:String x:Key="basic-flow-remove">移除项</x:String>
                <x:String x:Key="basic-flow-show">显示项</x:String>
                <x:String x:Key="basic-flow-hide">隐藏项</x:String>
                <x:String x:Key="basic-flow-select">选中项</x:String>
            </ResourceDictionary>
        </ResourceDictionary>
    </Panel.Resources>
</Panel>