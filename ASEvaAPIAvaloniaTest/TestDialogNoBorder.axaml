<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASEvaAPIAvaloniaTest"
        x:Class="ASEvaAPIAvaloniaTest.TestDialogNoBorder"
        Title="" Icon="resm:icon.png" WindowStartupLocation="CenterScreen"
        Width="800" Height="400" MinWidth="800" MinHeight="400" CanResize="False"
        SystemDecorations="None">
    <Grid Margin="8" ColumnDefinitions="Auto,8,Auto,*,Auto">
        <Button Classes="hyperlink" Grid.Column="0" x:Name="linkClientSize" Content="{DynamicResource basic-client-size}" />
        <Button Classes="hyperlink" Grid.Column="2" x:Name="linkShowDialogWithBorder" Content="{DynamicResource basic-dialog-with-border}" />
        <Button Grid.Column="4" x:Name="buttonClose" Content="{DynamicResource basic-close}" />
    </Grid>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary x:Key="en">
                <x:String x:Key="basic-client-size">Client Size</x:String>
                <x:String x:Key="basic-dialog-with-border">Dialog with border</x:String>
                <x:String x:Key="basic-close">Close</x:String>
            </ResourceDictionary>
            <ResourceDictionary x:Key="zh">
                <x:String x:Key="basic-client-size">用户区域</x:String>
                <x:String x:Key="basic-dialog-with-border">带边框对话框</x:String>
                <x:String x:Key="basic-close">关闭</x:String>
            </ResourceDictionary>
        </ResourceDictionary>
    </Window.Resources>
</Window>
