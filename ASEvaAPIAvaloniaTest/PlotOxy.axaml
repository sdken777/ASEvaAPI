<Panel xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASEvaAPIAvaloniaTest"
        xmlns:oxyplot="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia"
        x:Class="ASEvaAPIAvaloniaTest.PlotOxy"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400">
    <Grid ColumnDefinitions="Auto,8,*">
        <TreeView Grid.Row="0" x:Name="treeView" Width="250" Background="White" BorderThickness="1" BorderBrush="Gray" ItemsSource="{Binding TreeNodes}" SelectionChanged="treeView_SelectionChanged">
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding SubNodes}">
                    <Border HorizontalAlignment="Left" CornerRadius="3" Padding="3">
                        <TextBlock Text="{Binding Title}" />
                    </Border>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.Styles>
                <Style Selector="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
                </Style>
            </TreeView.Styles>
        </TreeView>
        <oxyplot:PlotView Grid.Column="2" x:Name="plotView" Background="Transparent" />
    </Grid>
</Panel>