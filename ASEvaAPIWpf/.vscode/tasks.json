{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "helper_platform_bin_name",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_bin_name"
                ]
            }
        },
        {
            "id": "helper_platform_exe",
            "type": "command",
            "command": "shell-command.run",
            "args": {
                "cmd": "dotnet",
                "args": [
                    "../bin/VSCodeHelper.dll",
                    "shell_command",
                    "platform_console_exe",
                    "ASEvaAPIEtoTest"
                ]
            }
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "type": "process",
            "label": "Build (Debug)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIWpf.pdb",
                "../${input:helper_platform_bin_name}/debug/ASEvaAPIWpf.deps.json",
            ],
            "dependsOn": [
                "Subtask: Build for host (Debug)",
            ],
        },
        {
            "type": "process",
            "label": "Build (Release)",
            "group": "build",
            "command": "rm",
            "args": [
                "-vf",
                "../${input:helper_platform_bin_name}/ASEvaAPIWpf.pdb",
                "../${input:helper_platform_bin_name}/ASEvaAPIWpf.deps.json",
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Subtask: Build for host (Release)",
            ],
        },
        {
            "type": "process",
            "label": "Run (Debug)",
            "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/${input:helper_platform_exe}",
            "args": [ "wpf" ],
            "options": {
                "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/debug/"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build (Debug)"
            ],
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Run (Release)",
            "command": "${workspaceFolder}/../${input:helper_platform_bin_name}/${input:helper_platform_exe}",
            "args": [ "wpf" ],
            "options": {
                "cwd": "${workspaceFolder}/../${input:helper_platform_bin_name}/"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build (Release)"
            ],
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "rm",
            "args": [
                "-rf",
                "./obj",
                "./bin"
            ],
            "problemMatcher": []
        },

        // Subtasks:

        {
            "type": "process",
            "label": "Subtask: Build for host (Debug)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIWpf.csproj",
                "-o",
                "../${input:helper_platform_bin_name}/debug",
                "/property:GenerateFullPaths=true",
                "/property:AppoxVsCodeBuildTask=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "type": "process",
            "label": "Subtask: Build for host (Release)",
            "hide": true,
            "command": "dotnet",
            "args": [
                "build",
                "./ASEvaAPIWpf.csproj",
                "-c",
                "Release",
                "-o",
                "../${input:helper_platform_bin_name}",
                "/property:DocumentationFile=../${input:helper_platform_bin_name}/ASEvaAPIWpf.xml",
                "/property:GenerateFullPaths=true",
                "/property:AppoxVsCodeBuildTask=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
        },
    ]
}
